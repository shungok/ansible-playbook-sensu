[
  {rabbit, [
    {ssl_listeners, [{{ rabbitmq_port }}]},
    {ssl_options, [
      {cacertfile,"/etc/rabbitmq/ssl/cacert.pem"},
      {certfile,"/etc/rabbitmq/ssl/cert.pem"},
      {keyfile,"/etc/rabbitmq/ssl/key.pem"},
      {verify,verify_none},
      {fail_if_no_peer_cert,false}]}
  ]},
  {rabbitmq_management, [
    {listener, [
      {port,     15671},
      {ssl,      true},
      {ssl_opts, [
        {cacertfile, "/etc/rabbitmq/ssl/cacert.pem"},
        {certfile,   "/etc/rabbitmq/ssl/cert.pem"},
        {keyfile,    "/etc/rabbitmq/ssl/key.pem"}
      ]}
    ]}
  ]}
].
